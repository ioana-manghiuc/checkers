<Window x:Class="checkers_.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:checkers_.Views"
        mc:Ignorable="d"
        Title="welcome to checkers!" Height="520" Width="400" ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="beige" Color="#dbd4d1"></SolidColorBrush>
    </Window.Resources>
    <Grid Background="{StaticResource beige}">
        <views:MenuView/>
    </Grid>
</Window>
